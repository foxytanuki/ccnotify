{
  "name": "ccnotify",
  "version": "1.0.0",
  "description": "CLI tool for creating Claude Code Stop Hooks with Discord and ntfy notifications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ccnotify": "./dist/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:prod",
    "build:dev": "tsc --incremental",
    "build:prod": "tsc --project tsconfig.json",
    "build:watch": "tsc --watch --incremental",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --project tsconfig.test.json",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "rm -rf dist coverage .tsbuildinfo",
    "prebuild": "npm run typecheck",
    "prepack": "npm run build",
    "prepare": "npm run build",
    "ci": "npm run typecheck && npm run test",
    "ci:strict": "npm run lint && npm run typecheck && npm run test"
  },
  "keywords": [
    "claude",
    "cli",
    "notifications",
    "discord",
    "ntfy",
    "hooks"
  ],
  "author": "foxytanuki",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}