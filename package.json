{
  "name": "ccnotify",
  "version": "1.0.0",
  "description": "CLI tool for creating Claude Code Stop Hooks with Discord and ntfy notifications",
  "main": "dist/index.js",
  "bin": {
    "ccnotify": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist"
  },
  "keywords": ["claude", "cli", "notifications", "discord", "ntfy", "hooks"],
  "author": "foxytanuki",
  "license": "ISC",
  "packageManager": "pnpm@10.10.0",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@types/node": "^24.0.13",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}
